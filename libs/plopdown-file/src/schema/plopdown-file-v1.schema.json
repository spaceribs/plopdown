      "minLength": 2,
      "type": "string"
    },
    "Color": {
      "description": "A hex, hsl, hsla or rgba color string: #FA9, #FFAA99, rgba(1, 1, 2, 0.5)",
      "pattern": "^(#[0-9a-f]{3}|#(?:[0-9a-f]{2}){2,4}|(rgb|hsl)a?\\((-?\\d+%?[,\\s]+){2,3}\\s*[\\d\\.]+%?\\))$",
      "type": "string"
    },
    "Cue": {
