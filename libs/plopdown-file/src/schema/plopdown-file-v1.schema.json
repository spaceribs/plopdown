        },
        "created": {
          "description": "The date in which this track was created.",
          "title": "Created",
          "type": "string"
        },
        "duration": {
          "description": "Hint of the total duration of the matching video in seconds",
          "title": "Duration",
          "type": "string"
        },
        "for": {
          "description": "The name of the video this track is intended for.",
          "title": "Intended Video",
          "type": "string"
        },
        "frameOrigin": {
          "description": "Hint of where the video file is hosted: \"https://netflix.com\"",
          "title": "Frame Origin",
          "type": "string"
        },
        "framePath": {
          "description": "Hint of the path to the video: \"/video/123\"",
          "title": "Frame Path",
          "type": "string"
        },
        "frameSearch": {
          "description": "Hint of the search parameters to the video: \"id=123\"",
          "title": "Frame Search",
          "type": "string"
        },
        "frameTitle": {
          "description": "Hint of the title of the page hosting the video \"Netflix - The Shining\"",
          "title": "Title",
          "type": "string"
        },
        "language": {
          "description": "The localization in \"en-US\" format.",
          "title": "Language",
          "type": "string"
        },
        "license": {
          "description": "The abbreviated license type \"CC0\"",
          "title": "License",
          "type": "string"
        },
        "thumbnail": {
          "description": "The filename of the thumbnail file uploaded alongside the track.",
          "title": "Thumbnail",
          "type": "string"
        },
        "title": {
          "description": "Name of the plopdown",
          "title": "Title",
          "type": "string"
        },
        "type": {
          "const": "plopdown_v2",
          "description": "Schema version number",
          "title": "Type",
          "type": "string"
        },
        "updated": {
          "title": "Last Updated",
          "type": "string"
        },
        "url": {
          "description": "The external link where more information about this track is available.",
          "title": "URL",
          "type": "string"
        },
        "xpath": {
          "description": "Hint of XPath to the video in the page: \"/HTML[1]/BODY[1]//VIDEO[1]\"",
          "title": "XPath",
          "type": "string"
        }
      },
      "required": [
        "_id",
        "_rev",
        "created",
        "for",
        "title",
        "type",
        "xpath"
