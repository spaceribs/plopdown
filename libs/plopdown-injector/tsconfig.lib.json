{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "es2019",
    "declaration": true,
    "inlineSources": true,
    "types": ["firefox-webext-browser"],
    "lib": ["dom", "es2018"]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": [
    "**/*.ts",
    "../plopdown-embed/src/lib/load-asset.service.ts",
    "../plopdown-embed/src/lib/load-asset.service.spec.ts"
  ]
}
